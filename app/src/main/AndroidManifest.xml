<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.webview_fichajeskairos24h">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WebView_FichajesKairos24h">

        <!-- DeviceAdminReceiver -->
        <receiver
            android:name=".AdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <!-- KioskLauncherActivity: se registra como HOME + DEFAULT -->
        <activity
            android:name=".KioskLauncherActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WebView_FichajesKairos24h">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- (Si tenías una MainActivity antigua, quítale el LAUNCHER) -->

    </application>
</manifest>
